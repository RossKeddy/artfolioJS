<form method="post" id="registerForm">
    <div class="container">

        <h1>Register</h1>
        <p>Fill in the form to create an account!</p>

        <label for="username"><b>Email</b></label><br />
        <input type="text" class="aligntext" id="username"  placeholder="Email" name="username" required> <br />

        <label for="firstname"><b>First Name</b></label><br />
        <input type="text" class="aligntext" id="firstname"  placeholder="First Name" name="firstname" required> <br />

        <label for="lastname"><b>Last Name</b></label><br />
        <input type="text" id="lastname" placeholder="Last Name" name="lastname" required> <br />

        <label for="password"><b>Password</b></label><br />
        <input type="password" id="password" placeholder="Password" name="password" required> <br />

        <label for="confirm"><b>Repeat Password</b></label><br />
        <input type="password" id="confirm" placeholder="Repeat Password" name="confirm" required> <br /> <br />

        <div class="form-group">
            <button class="cancelbtn">Cancel</button>
            <button class="signupbtn">Register</button>
            <hr />
            <p>Already have an account?  <a href="/login" title="Login">Login</a></p>
        </div>
    </div>
</form>

